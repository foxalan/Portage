<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.fox_ui.tankgame.view.GamePanel
        android:id="@+id/gamePanel"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:background="@android:color/holo_blue_bright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_move_up"
            android:background="@drawable/bg_btn_game_tank"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="上"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_move_down"
            android:background="@drawable/bg_btn_game_tank"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="下"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
             />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_move_left"
            android:background="@drawable/bg_btn_game_tank"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="左"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_move_right"
            android:background="@drawable/bg_btn_game_tank"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="右"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_bullet"
            android:background="@drawable/bg_btn_game_tank"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:text="大"
            android:gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_start_game"
        android:background="@drawable/bg_btn_game_tank"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:text="开始游戏"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>